{
  "name": "minimal-games-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "test": "npm run test:lint && npm run test:license && npm run test:unit && npm run test:e2e",
    "test:lint": "next lint",
    "test:license": "npx license-checker --production --summary --failOn \"GPL, AGPL\"",
    "test:unit": "vitest run",
    "test:unit-ui": "vitest --ui",
    "test:e2e": "npx playwright test",
    "test:e2e-ui": "npx playwright test --ui",
    "gemini": "gemini",
    "update:license": "npx license-checker --production --json | node scripts/license-update.js",
    "prepare": "husky",
    "postinstall": "npx playwright install && npm run update:license"
  },
  "dependencies": {
    "next": "^15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@google/gemini-cli": "^0.3.2",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "license-checker": "^25.0.1",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@playwright/test": "^1.54.2"
  }
}
